---
// Modern Contact CTA Component
import { getLangFromUrl, useTranslations } from '../i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="contact" class="py-16 px-4 sm:px-6 lg:px-8 relative">
  <div class="max-w-4xl mx-auto">
    <div class="glassmorphism rounded-3xl p-8 md:p-12 text-center relative overflow-hidden">
      <!-- Background Gradient -->
      <div class="absolute inset-0 bg-gradient-to-r from-primary-500/10 via-accent-500/10 to-secondary-500/10 rounded-3xl"></div>
      
      <!-- Content -->
      <div class="relative z-10">
        <div class="mb-8">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            {t('contact.cta.title')} 
            <span class="bg-gradient-to-r from-primary-400 to-accent-400 bg-clip-text text-transparent">{t('contact.cta.title_highlight')}</span> ?
          </h2>
          <p class="text-lg text-gray-300 max-w-2xl mx-auto">
            {t('contact.cta.subtitle')}
          </p>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
          <a href="mailto:solim.laokpezi@outlook.fr" class="group inline-flex items-center px-8 py-4 bg-gradient-to-r from-primary-500 to-accent-500 text-white font-semibold rounded-2xl hover:from-primary-600 hover:to-accent-600 transition-all duration-300 transform hover:scale-105 ai-glow">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>{t('contact.cta.contact_button')}</span>
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          
          <a href="/documents/CV_Solim_LAOKPEZI.pdf" download="CV_Solim_LAOKPEZI.pdf" class="group inline-flex items-center px-8 py-4 glassmorphism text-white font-semibold rounded-2xl hover:bg-white/10 transition-all duration-300 border border-white/20 hover:border-secondary-400/50">
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <span>{t('contact.cta.download_cv')}</span>
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          
          <a href="https://www.linkedin.com/in/solimlaokpezi/" target="_blank" class="group inline-flex items-center px-8 py-4 glassmorphism text-white font-semibold rounded-2xl hover:bg-white/10 transition-all duration-300 border border-white/20 hover:border-primary-400/50">
            <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <span>{t('contact.cta.linkedin')}</span>
            <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>
        
        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-8 pt-8 border-t border-white/10">
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-400">2+</div>
            <div class="text-sm text-gray-400">{t('contact.cta.stats.experience')}</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-accent-400">15+</div>
            <div class="text-sm text-gray-400">{t('contact.cta.stats.projects')}</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-secondary-400">3</div>
            <div class="text-sm text-gray-400">{t('contact.cta.stats.certifications')}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .ai-glow {
    box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
  }
  
  .glassmorphism {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>
