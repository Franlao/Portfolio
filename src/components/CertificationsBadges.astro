    </div>
    
    <!-- Soft Skills -->
    <div class="glassmorphism rounded-2xl p-8">
      <h3 class="text-3xl font-bold text-white mb-8 text-center">
        <span class="bg-gradient-to-r from-secondary-400 to-primary-400 bg-clip-text text-transparent">
          {t('certifications.soft_skills.title')}
        </span>
      </h3>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="skill-item p-4 glassmorphism rounded-xl hover:bg-white/10 transition-all duration-300 group">
