        <div class="space-y-6">
          <div class="border-l-4 border-accent-500 pl-4">
            <h4 class="text-lg font-bold text-white">{t('certifications.education.license_data.title')}</h4>
            <p class="text-accent-400 font-medium">{t('certifications.education.license_data.school')}</p>
            <p class="text-gray-400 text-sm">{t('certifications.education.license_data.period')}</p>
          </div>
          
          <div class="border-l-4 border-secondary-500 pl-4">
            <h4 class="text-lg font-bold text-white">{t('certifications.education.license_software.title')}</h4>
            <p class="text-secondary-400 font-medium">{t('certifications.education.license_software.school')}</p>
